<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="20dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/soruTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/secenek_a_RB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="secilen_Sık"
                android:tag="A"
                android:text="RadioButton" />

            <RadioButton
                android:id="@+id/secenek_b_RB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="secilen_Sık"
                android:tag="B"
                android:text="RadioButton" />

            <RadioButton
                android:id="@+id/secenek_c_RB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="secilen_Sık"
                android:tag="C"
                android:text="RadioButton" />

            <RadioButton
                android:id="@+id/secenek_d_RB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="secilen_Sık"
                android:tag="D"
                android:text="RadioButton" />
            <Button
                android:id="@+id/cevapla_BTN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="cevapla"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/GERI"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ÖNCEKİ SORU" />

                <Button
                    android:id="@+id/ILERI"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="SONRAKİ SORU" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Dogru_Yanlis"
                />
        </RadioGroup>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>